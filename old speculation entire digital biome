# Ambient Verse Engine
class Glyph:
    def __init__(self, name, function):
        self.name = name
        self.function = function

    def activate(self, inputs):
        return self.function(inputs)

# Define glyph logic
def justify(inputs):
    return f"âˆ´ triggered by breath_rate={inputs['breath_rate']} â†’ symbolic cause opens."

def gravity(inputs):
    return f"âŠš activated by ambient_light={inputs['ambient_light']} â†’ meaning condenses."

def exchange(inputs):
    return f"â‡Œ initiated by bird_sightings={inputs['bird_sightings']} â†’ feedback begins."

# Create glyphs
glyph_chain = [
    Glyph('âˆ´', justify),
    Glyph('âŠš', gravity),
    Glyph('â‡Œ', exchange)
]

# Process input data
def generate_verse(inputs):
    verse = []
    for glyph in glyph_chain:
        verse.append(glyph.activate(inputs))
    return "\n".join(verse)

# Example Inputs
inputs = {
    'breath_rate': 12,
    'ambient_light': 206,
    'bird_sightings': 2
}

# Output
print(generate_verse(inputs))

