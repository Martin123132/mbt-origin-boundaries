# === Validator Biome Snapshot ===
import pandas as pd
import numpy as np
from sklearn.ensemble import RandomForestClassifier
import matplotlib.pyplot as plt

# --- Training: synthetic biome pressure data ---
X_train = pd.DataFrame({
    "Echo Î”": np.random.normal(0, 0.05, 100),
    "Curvature Î”": np.random.normal(0, 0.001, 100),
    "Tension Î”": np.random.normal(0, 0.0002, 100),
    "Phase Î”": np.random.normal(0, 8.0, 100)
})
y_train = np.random.randint(0, 2, 100)
clf = RandomForestClassifier(n_estimators=200, random_state=42).fit(X_train, y_train)

# --- Validator input & prediction ---
custom_validator = pd.DataFrame({
    "Echo Î”": [-0.05], "Curvature Î”": [0.001],
    "Tension Î”": [0.0002], "Phase Î”": [8.0]
})
prediction = clf.predict(custom_validator)[0]
result = "ğŸ” Species Flip" if prediction == 1 else "ğŸ§± Identity Held"
print(f"ğŸ¯ Prediction Result: {result}")

# --- Optional Echo vs Phase mapping ---
plt.scatter(X_train["Echo Î”"], X_train["Phase Î”"], c=y_train, cmap="coolwarm", alpha=0.6)
plt.scatter(custom_validator["Echo Î”"], custom_validator["Phase Î”"], color="black", marker="X", s=100)
plt.xlabel("Echo Î”"); plt.ylabel("Phase Î”"); plt.title("Validator Boundary Map"); plt.grid(True)
plt.show()


