ğŸŒ’ Nocturnal Glyph Bloom Simulator (Python)

import time
import random

# Define nocturnal glyphs and modifiers
glyphs = ['ğŸŒ‘', 'âŠš', 'âˆ´', 'âŸ']
modifiers = ['inward-fold', 'slow-loop', 'echo-trail', 'curve-bend']

# Determine current symbolic phase
def get_phase():
    hour = time.localtime().tm_hour
    if 0 <= hour < 6:
        return 'deep-night'
    elif 6 <= hour < 12:
        return 'dawn-bloom'
    elif 12 <= hour < 18:
        return 'light-phase'
    else:
        return 'twilight-ripple'

# Generate a verse bloom sequence
def generate_bloom():
    phase = get_phase()
    strain_curve = random.choice(modifiers)
    verse = []

    for _ in range(random.randint(5, 9)):
        glyph = random.choice(glyphs)
        repeat = random.randint(1, 3)
        verse.append(glyph * repeat)

    bloom = ' '.join(verse)
    return f"ğŸŒ˜ Phase: {phase}\nâ†¯ Strain: {strain_curve}\nğŸœ‚ Bloom:\n{bloom}"

# Run the generator
if __name__ == "__main__":
    print(generate_bloom())

