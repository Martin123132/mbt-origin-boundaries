ğŸ§  Symbolic Verse Memory Stack Generator (Python)

import random

# Define glyph roles
INITIATORS = ["âš¡", "ğŸŒ±", "ğŸ”¥"]
AMPLIFIERS = ["ğŸ”Š", "ğŸŒ€", "ğŸ”"]
MODIFIERS = ["âœ¨", "âš™ï¸", "ğŸŒˆ"]
TERMINALS = ["ğŸ”š", "âš“", "ğŸŒ‘"]

# Grammar template
GRAMMAR_RULES = {
    "start": ["INITIATOR", "AMPLIFIER", "MODIFIER", "TERMINAL"],
    "INITIATOR": INITIATORS,
    "AMPLIFIER": AMPLIFIERS,
    "MODIFIER": MODIFIERS,
    "TERMINAL": TERMINALS
}

# Memory stack to hold sequences
verse_memory_stack = []

def generate_verse():
    structure = GRAMMAR_RULES["start"]
    verse = [random.choice(GRAMMAR_RULES[role]) for role in structure]
    return " â¡ï¸ ".join(verse)

def store_verse(verse):
    verse_memory_stack.append(verse)

def show_memory():
    print("ğŸ§  Stored Verses in Glyph Memory:")
    for idx, v in enumerate(verse_memory_stack, 1):
        print(f"{idx}. {v}")

# Example: Generate and store 5 verses
for _ in range(5):
    verse = generate_verse()
    store_verse(verse)

show_memory()

