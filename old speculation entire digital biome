trait_matrix[42] = validator_42

# === COMPUTE DISTORTION MAP USING MDS ===
mds = MDS(n_components=2, dissimilarity="euclidean", random_state=42)
distortion_map = mds.fit_transform(trait_matrix)

# === PLOT FUSION CORRIDOR DISTORTION ===
