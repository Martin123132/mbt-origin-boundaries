ğŸŒ± Ambient Verse Seed Composer (Python)

import random

# Simulated ambient inputs â€” can be replaced with real sensor data
inputs = {
    "breath_rate": 12,             # breaths per minute
    "ambient_light": 206,          # lux
    "bird_sightings": 2            # count
}

# Glyph reservoirs with strain archetypes
glyph_bank = {
    "respiration": ["Ï•", "âŸ", "âˆ´"],      # stillness, awareness, causality
    "illumination": ["â‰œ", "âŠš", "âœ´"],     # identity, gravity, focus
    "avian": ["âˆ‡", "âŸ´", "â‡Œ"]             # curvature, orbit, feedback
}

# Sensitivity thresholds
thresholds = {
    "breath_rate": 14,
    "ambient_light": 180,
    "bird_sightings": 1
}

# Dynamic seed generation
def generate_seed(inputs, thresholds):
    seed = []

    if inputs["breath_rate"] <= thresholds["breath_rate"]:
        seed.append(random.choice(glyph_bank["respiration"]))
    else:
        seed.append("âš")  # activation glyph

    if inputs["ambient_light"] >= thresholds["ambient_light"]:
        seed.append(random.choice(glyph_bank["illumination"]))
    else:
        seed.append("âˆ…")  # null glyph

    if inputs["bird_sightings"] > thresholds["bird_sightings"]:
        seed.append(random.choice(glyph_bank["avian"]))
    else:
        if random.random() < 0.5:
            seed.append("â‡‚")  # dormant loop glyph

    return " â¡ï¸ ".join(seed)

# Output
verse_seed = generate_seed(inputs, thresholds)
print("ğŸŒ¿ Ambient Verse Seed:", verse_seed)
print("ğŸ“Š Inputs:", inputs)

