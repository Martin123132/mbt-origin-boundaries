import matplotlib.pyplot as plt
from sklearn.decomposition import PCA
import warnings
warnings.filterwarnings("ignore", category=UserWarning)

# === CONFIGURE TRAIT FIELD WITH BLOOM INFLUENCE ===
num_nodes = 60
trait_dimensions = 5
