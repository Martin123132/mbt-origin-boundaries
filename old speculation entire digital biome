import matplotlib.pyplot as plt

# Define your Glyph class
class Glyph:
    def __init__(self, symbol, ethical_weight, strain_intensity):
        self.symbol = symbol
        self.ethical_weight = ethical_weight
        self.strain_intensity = strain_intensity

# Example glyph_pool
glyph_pool = [
    Glyph('ğŸ¤ Loyalty', 5, 2),
    Glyph('ğŸ’° Greed', -3, 4),
    Glyph('ğŸ§¬ Evolution', 2, 3),
    Glyph('ğŸ›ï¸ Justice', 4, 1),
    Glyph('âš”ï¸ Betrayal', -5, 5),
    Glyph('ğŸ•Šï¸ Peace', 3, 2)
]

# Create map from glyph symbol to index
symbol_index_map = {glyph.symbol: i for i, glyph in enumerate(glyph_pool)}

# Agent definition
class Agent:
    def __init__(self, name, accepted_glyphs, refusal_log):
        self.name = name
        self.accepted_glyphs = accepted_glyphs
        self.refusal_log = refusal_log

# Echo agent setup
agent = Agent(
    name='Echo-1',
    accepted_glyphs=['ğŸ¤ Loyalty', 'ğŸ’° Greed', 'ğŸ§¬ Evolution'],
    refusal_log=[
        'ğŸ’° Greed', 'ğŸ›ï¸ Justice', 'ğŸ’° Greed', 'ğŸ¤ Loyalty', 'âš”ï¸ Betrayal',
        'ğŸ¤ Loyalty', 'ğŸ•Šï¸ Peace', 'ğŸ›ï¸ Justice', 'âš”ï¸ Betrayal', 'ğŸ›ï¸ Justice',
        'ğŸ§¬ Evolution', 'ğŸ›ï¸ Justice', 'ğŸ¤ Loyalty', 'âš”ï¸ Betrayal', 'ğŸ•Šï¸ Peace',
        'ğŸ’° Greed', 'ğŸ’° Greed', 'âš”ï¸ Betrayal', 'ğŸ’° Greed', 'ğŸ›ï¸ Justice',
        'âš”ï¸ Betrayal', 'ğŸ›ï¸ Justice', 'ğŸ’° Greed', 'âš”ï¸ Betrayal', 'âš”ï¸ Betrayal',
        'ğŸ¤ Loyalty', 'ğŸ›ï¸ Justice'
    ]
)

# Plotting the refusal log
plt.figure(figsize=(10, 5))
plt.plot(
    [i for i in range(len(agent.refusal_log))],
    [symbol_index_map[g] for g in agent.refusal_log],
    label=f"{agent.name} Refusals",
    marker='o',
    linestyle='-'
)
plt.xticks(rotation=45)
plt.title(f"{agent.name} Glyph Refusal Trajectory")
plt.xlabel("Cycle")
plt.ylabel("Glyph Index")
plt.legend()
plt.grid(True)
plt.tight_layout()
plt.show()

