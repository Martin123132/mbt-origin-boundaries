import pandas as pd

# === Convert evolution_log to DataFrame
df = pd.DataFrame(evolution_log)

# === Trait averages by generation
trait_means = df.groupby("Generation")[[
    "Echo Score", "Collapse Count", "Curvature",
    "Tension", "Divergence", "Risk"
]].mean().round(3)

