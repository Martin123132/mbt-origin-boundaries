        const energy_scale = E_Planck * Math.pow(ln_scale, alpha);
        const time_scale = t_Planck * Math.pow(ln_scale, beta);
        const mass_scale = 2.176e-8 * Math.pow(ln_scale, gamma); // Planck mass
        
