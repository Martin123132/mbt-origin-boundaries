    clearInterval(intervalRef.current);
    setIsRunning(false);
    initializeEcosystem();
  };

  useEffect(() => {
    initializeEcosystem();
    return () => clearInterval(intervalRef.current);
  }, []);

  useEffect(() => {
    if (isRunning) {
