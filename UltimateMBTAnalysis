        { name: 'Nuclear', size: 1e-15, phenomenon: 'Strong Force' },
        { name: 'Atomic', size: 1e-10, phenomenon: 'Chemistry' },
        { name: 'Molecular', size: 1e-9, phenomenon: 'Biology' },
        { name: 'Cellular', size: 1e-6, phenomenon: 'Life' },
        { name: 'Human', size: 1.7, phenomenon: 'Consciousness' },
        { name: 'City', size: 1e4, phenomenon: 'Civilization' },
        { name: 'Earth', size: 6.4e6, phenomenon: 'Geology' },
        { name: 'Solar System', size: 1e13, phenomenon: 'Planetary Dynamics' },
        { name: 'Stellar', size: 1e16, phenomenon: 'Nuclear Fusion' },
        { name: 'Galactic', size: 1e21, phenomenon: 'Dark Matter' },
